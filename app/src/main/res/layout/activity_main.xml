<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity"
    android:background="#336666">



    <FrameLayout
        android:layout_marginTop="5dp"
        android:id="@+id/frame_keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >
    </FrameLayout>
    <FrameLayout
        android:id="@+id/frame_mouse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="I'm MainActivity"
        android:textSize="15sp"
        android:textColor="#FEFEFE"
        android:layout_below="@+id/frame_mouse"
        android:id="@+id/tv_activity_main_info"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:textColor="#FEFEFE"
        android:id="@+id/tv_activity_main_event_message"
        android:layout_below="@+id/tv_activity_main_info"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
